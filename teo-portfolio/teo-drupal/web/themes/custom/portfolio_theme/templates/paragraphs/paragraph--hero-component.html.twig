<section id="hero" class="hero section">
  <img src="{{file_url(paragraph.field_background_image.entity.fileuri)}}" alt="" data-aos="fade-in">
  <div class="container text-center" data-aos="zoom-out" data-aos-delay="100">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <h2>{{ content.field_title }}</h2>
        <p>{{ content.field_subtitle }}</p>
        {% set button = content.field_button.0 %}
        {% if button['#url'] is not empty %}
          <a href="{{button.url}}" class="btn-get-started">{{button['#title']}}</a>
        {% endif %}
      </div>
    </div>
  </div>
</section>